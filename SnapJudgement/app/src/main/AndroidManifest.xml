<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gvsu.cis.lafeldtb.snapjudgement" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TitleScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerSelect"
            android:label="@string/title_activity_player_select" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".JudgeTurn"
            android:label="@string/title_activity_judge_turn" >
        </activity>
        <activity
            android:name=".AdjectiveSelect"
            android:label="@string/title_activity_adjective_select" >
        </activity>
        <activity
            android:name=".ParticipantTurn"
            android:label="@string/title_activity_participant_turn" >
        </activity>
        <activity
            android:name=".GameTypeSelect"
            android:label="@string/title_activity_game_type_select" >
        </activity>
        <activity
            android:name=".OfflinePlayerSelect"
            android:label="@string/title_activity_offline_player_select" >
        </activity>
    </application>

</manifest>
