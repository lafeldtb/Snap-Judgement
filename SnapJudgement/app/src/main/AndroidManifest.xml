<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gvsu.cis.lafeldtb.snapjudgement"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-sdk android:minSdkVersion="21">

    </uses-sdk>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/snap_judgement_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >



        <activity
            android:name=".TitleScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />

        <activity
            android:name=".JudgeTurn"
            android:label="@string/title_activity_judge_turn" >
        </activity>
        <activity
            android:name=".AdjectiveSelect"
            android:label="@string/title_activity_adjective_select" >
        </activity>
        <activity
            android:name=".ParticipantTurn"
            android:label="@string/title_activity_participant_turn" >
        </activity>
        <activity
            android:name=".OfflinePlayerSelect"
            android:label="@string/title_activity_offline_player_select" >
        </activity>
        <activity
            android:name=".Standings"
            android:label="@string/title_activity_standings" >
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".Victory"
            android:label="@string/title_activity_victory" >
        </activity>
        <activity
            android:name=".TurnNotifier"
            android:label="@string/title_activity_turn_notifier" >
        </activity>
    </application>

</manifest>
