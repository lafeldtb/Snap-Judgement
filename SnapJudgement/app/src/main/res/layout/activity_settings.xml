<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.gvsu.cis.lafeldtb.snapjudgement.Settings"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of players:"
        android:id="@+id/number"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="45dp"
        android:textColor="#ff000000"
        android:background="#ff09de00" />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="ACCEPT CHANGES"
        android:id="@+id/acceptChangesButton"
        android:background="#ffdedc00"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/playerNumber"
        android:layout_below="@+id/number"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:textSize="45dp"
        android:text="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of turns:"
        android:id="@+id/numberOfTurns"
        android:layout_below="@+id/playerNumber"
        android:layout_alignParentLeft="true"
        android:textSize="45dp"
        android:textColor="#ff000000"
        android:background="#ff09de00"
        android:layout_marginTop="60dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/turnNumber"
        android:layout_below="@+id/numberOfTurns"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:textSize="45dp"
        android:text="10" />

</RelativeLayout>
