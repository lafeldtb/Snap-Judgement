<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.gvsu.cis.lafeldtb.snapjudgement.GameTypeSelect"
    android:background="@android:color/holo_blue_light">

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="NEW OFFLINE GAME"
        android:id="@+id/newOffline"
        android:background="#ffdedc00"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="NEW ONLINE GAME"
        android:id="@+id/newOnline"
        android:background="#ffdedc00"
        android:textSize="25dp"
        android:layout_above="@+id/oldOffline"
        android:layout_alignLeft="@+id/oldOffline"
        android:layout_alignStart="@+id/oldOffline"
        android:layout_marginBottom="74dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="EXISTING OFFLINE GAME"
        android:id="@+id/oldOffline"
        android:background="#ffdedc00"
        android:textSize="25dp"
        android:layout_marginBottom="77dp"
        android:layout_above="@+id/oldOnline"
        android:layout_alignLeft="@+id/oldOnline"
        android:layout_alignStart="@+id/oldOnline" />

    <Button
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:text="EXISTING ONLINE GAME"
        android:id="@+id/oldOnline"
        android:background="#ffdedc00"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/newOffline"
        android:layout_alignStart="@+id/newOffline" />

</RelativeLayout>